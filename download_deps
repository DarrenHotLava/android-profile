#!/bin/sh
set -e
DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
cd $DIR

ANDROID_PROFILE_CACHE=~/.soomla/cache/android-profile
mkdir -p $ANDROID_PROFILE_CACHE

./social-providers/android-profile-facebook/download_deps $ANDROID_PROFILE_CACHE
./social-providers/android-profile-google/download_deps $ANDROID_PROFILE_CACHE
./social-providers/android-profile-twitter/download_deps $ANDROID_PROFILE_CACHE
./SoomlaAndroidProfile/download_deps $ANDROID_PROFILE_CACHE
